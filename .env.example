# Application Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000

# Database Configuration
DATABASE_PATH=court_data.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/courtdata

# Scraping Configuration
HEADLESS_BROWSER=true
TIMEOUT_SECONDS=30
MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Optional: External CAPTCHA Service
# CAPTCHA_SERVICE_API_KEY=your-api-key-here
# CAPTCHA_SERVICE_URL=https://api.anticaptcha.com

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=court_fetcher.log

# Optional: PostgreSQL (for production)
POSTGRES_DB=courtdata
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Optional: Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# Optional: Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@yourcompany.com

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CSRF_SECRET_KEY=another-secret-key-for-csrf

# Rate Limiting
REQUESTS_PER_MINUTE=10
REQUESTS_PER_HOUR=100

# Data Retention
DATA_RETENTION_DAYS=90
CLEANUP_INTERVAL_HOURS=24